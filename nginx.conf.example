# Пример конфигурации Nginx для MovieShop
# Скопируйте этот файл в /etc/nginx/sites-available/movieworld
# И замените значения на ваши реальные

server {
    listen 80;
    server_name ваш-домен.com www.ваш-домен.com;

    # Логи
    access_log /var/log/nginx/movieworld-access.log;
    error_log /var/log/nginx/movieworld-error.log;

    # Максимальный размер загружаемых файлов
    client_max_body_size 10M;

    # Статические файлы (HTML, CSS, JS, изображения)
    location / {
        root /home/ваш-пользователь/FrontVVIT;
        try_files $uri $uri/ /index.html;
        index index.html;
        
        # Кэширование статических файлов
        location ~* \.(jpg|jpeg|png|gif|ico|css|js)$ {
            expires 30d;
            add_header Cache-Control "public, immutable";
        }
    }

    # API запросы проксируются на Node.js
    location /api {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        
        # Таймауты
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }

    # Прямой доступ к изображениям (опционально)
    location /img {
        alias /home/ваш-пользователь/FrontVVIT/img;
        expires 30d;
        add_header Cache-Control "public";
    }

    # Блокировка доступа к скрытым файлам
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
}

